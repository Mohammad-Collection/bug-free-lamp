{% comment %}
  Video Banner Section
  Displays a 5-second 3D video banner with controls
{% endcomment %}

<div class="video-banner-section"
     data-autoplay="{{ section.settings.autoplay | default: settings.banner_autoplay | default: true }}"
     data-loop="{{ section.settings.loop | default: settings.banner_loop | default: true }}"
     data-duration="{{ section.settings.video_duration | default: settings.banner_video_duration | default: 5 }}">

  {% if section.settings.heading != blank %}
    <h2 class="video-banner-heading">{{ section.settings.heading | escape }}</h2>
  {% endif %}

  <div class="video-banner-container">
    {% if section.settings.video_url != blank %}
      <div class="video-banner-wrapper">
        <video class="video-banner-element"
               {% if section.settings.autoplay %}autoplay{% endif %}
               {% if section.settings.loop %}loop{% endif %}
               muted
               playsinline
               controls="{{ section.settings.show_controls | default: true }}"
               poster="{% if section.settings.video_poster %}{{ section.settings.video_poster | img_url: 'master' }}{% endif %}"
               data-duration="{{ section.settings.video_duration | default: 5 }}">
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>

        {% if section.settings.overlay_content != blank %}
          <div class="video-banner-overlay">
            <div class="video-banner-overlay-content">
              {{ section.settings.overlay_content }}
            </div>
          </div>
        {% endif %}

        {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
          <div class="video-banner-cta">
            <a href="{{ section.settings.cta_url }}" class="video-banner-cta-button">
              {{ section.settings.cta_text | escape }}
            </a>
          </div>
        {% endif %}

        <!-- Custom 3D Video Controls -->
        <div class="video-banner-controls">
          <button class="video-control-btn video-play-pause" aria-label="Play/Pause">
            <span class="play-icon">‚ñ∂</span>
            <span class="pause-icon">‚è∏</span>
          </button>
          <div class="video-progress-bar">
            <div class="video-progress-fill"></div>
          </div>
          <button class="video-control-btn video-mute" aria-label="Mute/Unmute">
            <span class="unmute-icon">üîä</span>
            <span class="mute-icon">üîá</span>
          </button>
          <button class="video-control-btn video-fullscreen" aria-label="Fullscreen">
            <span class="fullscreen-icon">‚õ∂</span>
          </button>
        </div>
      </div>
    {% else %}
      <div class="video-banner-placeholder">
        <p>Add a 5-second 3D video to display in the banner</p>
      </div>
    {% endif %}
  </div>

  {% if section.settings.description != blank %}
    <div class="video-banner-description">
      {{ section.settings.description | escape }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Video Banner",
  "tag": "section",
  "class": "section-video-banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "3D Video Banner"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "3D Video URL (MP4)"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image"
    },
    {
      "type": "range",
      "id": "video_duration",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Video Duration",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-play video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "label": "Show video controls",
      "default": true
    },
    {
      "type": "richtext",
      "id": "overlay_content",
      "label": "Overlay Content"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Call to Action URL"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Video Banner"
    }
  ]
}
{% endschema %}